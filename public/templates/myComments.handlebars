<div class="blog-main">
    <div class="container-fluid">
        <p class="blog-path">
            <a href="#/home">
                Home
            </a>
            <span>&nbsp; &raquo; &nbsp;</span>

            <a href="#/reviews">
                Reviews
            </a>
            <span>&nbsp; &raquo; &nbsp;</span>
            <a href="#/reviews/myComments">
                MyComments
            </a>
        </p>
        </p>
        <div class="blog-title">
            <h1>My Comments</h1>
            <h3>{{comments.length}} comments written by me</h3>
        </div>
        <div class="row">
            <div class="col-sm-8">
                {{#each comments}}
                <div class="blog-list">
                    <div class="blog-review">
                        <a href="#/">
                            <h1>{{title}}</h1>
                        </a>
                        
                        <div class="comments">
                         

                            <div class="comment-body">
                                <div class="comment-image col-xs-2">
                                    {{#if image}}
                                    <img src="{{image}}" class="img-responsive comment-photo"> {{else}}
                                    <img src="../images/comments-img.jpg" class="img-responsive comment-photo"> {{/if}}
                                </div>
                                <div class="comment-content col-xs-10">
                                    <p class="comment-date pull-right">{{date}}</p>
                                    <h3>{{name}}</h3>
                                    <p class="comment-message">{{message}}</p>
                                     <a  data-id="{{_id}}" class="btn btn-custom deleteButton">Delete</a> 
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
                {{/each}}
            </div>
        </div>
    </div>