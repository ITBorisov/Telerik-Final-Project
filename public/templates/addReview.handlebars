                        </div>
                    </div>
                    <div class="form-group">
                        <label for="description" class="col-sm-2 control-label">Short Description</label>
                        <div class="col-sm-8">
                            <div class="input-group">
                                <input type="text" required class="form-control" name="description" id="description" placeholder="Short Description" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="category" class="col-sm-2 control-label">Category</label>
                        <div class="col-sm-8">
                            <div class="input-group">
                                <input type="text" required class="form-control" name="category" id="category" placeholder="category" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-auth">ADD NEW REVIEW</button>
                    </div>
                </form>
            </div>
