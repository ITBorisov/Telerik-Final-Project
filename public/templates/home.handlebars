                        <!-- Left and right controls -->
                        <a class="left carousel-control" href="#media-carousel" data-slide="prev">
                            <span class="leftArrowMedia"><img src="../images/media-left-arrow.png"></img></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#media-carousel" data-slide="next">
                            <span class="rightArrowMedia"><img src="../images/media-right-arrow.png"></img></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
