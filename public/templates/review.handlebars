<div class="blog-main">
    <div class="container-fluid">
        <p class="blog-path">
            <a href="#/home">
                Home
            </a>
            <span> &raquo; </span>
            <a href="#/reviews">
                Reviews
            </a>
            <span> &raquo; </span>
            <a href="#/reviews/{{review.category}}">
                {{review.category}}
            </a>
            <span> &raquo; </span>
            <a href="#/reviews/{{review.title}}">
                {{review.title}}
            </a>

        </p>
        </p>
        <div class="blog-title">
            <h1>{{review.title}}</h1>
            <h3>Posted by {{review.author}} on {{review.date}} in {{review.category}}
            </h3>
        </div>
        <div class="row">
            <div class="col-sm-8">
                <div class="blog-list">
                    <div class="blog-review">
                        <div class="review-info">
                            <p>Posted by <span class="darker">{{review.author}}</span>
                                on {{review.date}} in <span class="darker">{{review.category}}</span>
                                | {{comments.length}} Comments
                            </p>
                        </div>
                        <div class="review-content">
                            <div class="row">              
                                <div class="thumbnail">
                                    <a href="#/">
                                    {{#if review.img}}
                                        <img src="{{review.img}}" class="img-responsive"> 
                                    {{else}}
                                        <img src="https://i.pinimg.com/736x/06/6f/2c/066f2caf0b4220c70a2fb676ad0cc673--fun-movies-watch-movies.jpg" class="img-responsive">                                        
                                    {{/if}}
                                    </a>
                                </div>
                                <p>{{review.reviewText}}</p>
                            </div>
                        </div>
                    </div>
                 </div>
                 {{#if comments}}
                 <div class="comments">
                        <h2>{{comments.length}} Comments</h2>
                        {{#each comments}}       
                                <div class="comment-body">
                                    <img src="{{img}}" class="img-thumbnail comment-photo"> 
                                    <h3>{{name}}</h3>
                                    <span class="comment-date">{{date}}</span>
                                    <p class="comment-message">{{message}}</p>
                                </div>
                        {{/each}}
                </div>
                {{/if}}
                <form id="addComment" class="form-horizontal add-comment" method="POST">
                    <h2>Leave a Reply</h2>
                    <div class="form-group">
                        <input type="text" class="form-control comment-input comment-info" id="name" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control comment-input comment-info" id="email" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control  comment-input comment-text" id="message" rows="7" placeholder="Message"></textarea>
                    </div>
                    <button type="submit" class="btn btn-custom">Add Comment</button>
                </form>
            </div>
            
            <div class="col-sm-3 aside-review">
                <aside class="sidebar">
                     <h3>
                        Categories
                    </h3>
                    <ul>
                        <li>
                            <a href="#/reviews/Action">Action</a>
                        </li>
                        <li>
                            <a href="#/reviews/Comedy">Comedy</a>
                        </li>
                        <li>
                            <a href="#/reviews/Crime">Crime</a>
                        </li>
                        <li>
                            <a href="#/reviews/Thriller">Thriller</a>
                        </li>
                        <li>
                            <a href="#/reviews/Drama">Drama</a>
                        </li>
                        <li>
                            <a href="#/reviews/Sci-fi">Sci-Fi</a>
                        </li>
                    </ul>
                
                    <h3>
                        New reviews
                    </h3>
                    <ul>
                        {{#each newReviews}}
                        <li>
                            <a href="#/reviews/{{_id}}">{{title}}</a>
                        </li>
                        {{/each}}
                    </ul>

                 
                      <h3>
                        New users
                    </h3>
                    <ul>
                        {{#each users}}
                        <li>
                            <a href="#/">{{username}}</a>
                        </li>
                        {{/each}}
                    </ul>
                
                </aside>
            </div>
        </div>
    </div>
</div>
