<div class="blog-main">
    <div class="container-fluid">
        <p class="blog-path">
            <a href="#/home">
                Home
            </a>
            <span>&nbsp; &raquo;&nbsp; </span>
            <a href="#/reviews">
                Reviews
            </a>
            <span>&nbsp; &raquo;&nbsp;</span>
            <a href="#/reviews/{{review.category}}">
                {{review.category}}
            </a>
            <span>&nbsp; &raquo;&nbsp;</span>
            <a href="#/reviews/{{review.title}}">
                {{review.title}}
            </a>

        </p>
        </p>
        <div class="blog-title">
            <h1>{{review.title}}</h1>
            <h3>Posted by {{review.author}} on {{review.date}} in {{review.category}}
            </h3>
        </div>
        <div class="row">
            <div class="col-sm-8">
                <div class="blog-list">
                    <div class="blog-review">
                        <div class="review-info">
                            <p>Posted by <a href="#/user/profile/?id={{review._acl.creator}}"><span class="darker">{{review.author}}</span></a>
                                on {{review.date}} in <a href="#/reviews/{{review.category}}"><span class="darker">{{review.category}}</span></a>
                                | {{comments.length}} Comments
                            </p>
                        </div>
                        <div class="review-content">
                            <div class="row">              
                                <div class="thumbnail">
                                    <a href="#/">
                                    {{#if review.img}}
                                        <img src="{{review.img}}" class="img-responsive"> 
                                    {{else}}
                                        <img src="../images/comments-img.jpg" class="img-responsive">                                        
                                    {{/if}}
                                    </a>
                                </div>
                                <p>{{review.reviewText}}</p>
                            </div>
                        </div>
                    </div>
                 </div>
                 {{#if comments}}
                 <div class="comments">
                        <h2>{{comments.length}} Comments</h2>
                        {{#each comments}}       
                                <div class="comment-body">
                                    <div class="comment-image col-xs-2">
                                        {{#if image}}
                                        <img src="{{image}}" class="img-responsive comment-photo"> 
                                        {{else}}   
                                        <img src="../images/comments-img.jpg" class="img-responsive comment-photo">
                                        {{/if}}
                                    </div>
                                    <div class="comment-content col-xs-10">
                                    <p class="comment-date pull-right">{{date}}</p>
                                    <h3>{{name}}</h3>  
                                    <p class="comment-message">{{message}}</p>
                                    <button type="submit" class="btn btn-custom pull-right">Read more</button>
                                    </div>
                                </div>
                        {{/each}}
                </div>
                {{/if}}
                <form id="addComment" class="form-horizontal add-comment" method="POST">
                    <h2>Leave a Reply</h2>
                    <div class="form-group">
                        <input type="text" class="form-control comment-input comment-info" id="name" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control comment-input comment-info" id="email" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control  comment-input comment-text" id="message" rows="7" placeholder="Message"></textarea>
                    </div>
                    <button type="submit" class="btn btn-custom pull-right">Add Comment</button>
                </form>
            </div>
            
            <div class="col-sm-3 aside-review">
                <aside class="sidebar">
                     <h3>
                        Movie Genres
                    </h3>
                    <ul>
                        <li>
                            <a href="#/reviews/Action">Action</a>
                        </li>
                        <li>
                            <a href="#/reviews/Comedy">Comedy</a>
                        </li>
                        <li>
                            <a href="#/reviews/Crime">Crime</a>
                        </li>
                        <li>
                            <a href="#/reviews/Thriller">Thriller</a>
                        </li>
                        <li>
                            <a href="#/reviews/Drama">Drama</a>
                        </li>
                        <li>
                            <a href="#/reviews/Sci-fi">Sci-Fi</a>
                        </li>
                    </ul>
                
                    <h3>
                        Recently Posted Reviews
                    </h3>
                    <ul>
                        {{#each newReviews}}
                        <li>
                            <a href="#/reviews/{{_id}}">{{title}}</a>
                        </li>
                        {{/each}}
                    </ul>

                 
                      <h3>
                        Recently Registered Critics
                    </h3>
                    <ul>
                        {{#each users}}
                        <li>
                            <a href="#/user/profile/?id={{_id}}">{{firstName}} {{lastName}}</a>
                        </li>
                        {{/each}}
                    </ul>
                
                </aside>
            </div>
        </div>
    </div>
</div>
