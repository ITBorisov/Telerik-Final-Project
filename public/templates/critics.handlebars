<div class="blog-main">
    <div class="container-fluid">
        <p class="blog-path">
            <a href="#/home">
                Home
            </a>
            <span>&nbsp; &raquo; &nbsp;</span>

            <a href="#/critics">
                Critics
            </a>
        </p>
        </p>
        <div class="blog-title">
            <h1>Current Cricitics List</h1>
            <h3>{{users.length}} Critics</h3>
        </div>
        <div class="row">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Firstname</th>
                        <th>Lastname</th>
                        <th>Email</th>       
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr class='clickable-row' data-href='#/user/profile/?id={{_id}}'>
                        <td>{{username}}</td>
                        <td>{{firstName}}</td>
                        <td>{{lastName}}</td>
                        <td>{{email}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

        </div>
    </div>





<script>
  $(document).ready(function($) {
    $(".clickable-row").click(function() {
        window.location = $(this).data("href");
    });
  });
</script>
