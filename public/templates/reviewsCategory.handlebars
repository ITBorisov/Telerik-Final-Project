<main class="blog-main">
    <div class="container-fluid">
        <p class="blog-path">
            <a href="#/home">
                Home
            </a>
            <span>&nbsp; &raquo; &nbsp;</span>
            <a href="#/reviews">
                Reviews
            </a>
            <span>&nbsp; &raquo; &nbsp;</span>
            <a href="#/">
                {{categoryPath}}
            </a>
        </p>
        </p>
        <div class="blog-title">
            <h1>{{categoryPath}}</h1>
            <h3>{{review.length}} reviews in {{categoryPath}} category</h3>
        </div>
        <div class="row">
            <div class="col-sm-8">
              {{#each review}}
                <div class="blog-list">
                    <div class="blog-review">
                        <a href="#/"><h1>{{title}}</h1></a>
                        <div class="review-info">
                            <p>Posted by <a href="#/user/profile/?id={{_acl.creator}}"><span class="darker">{{author}}</span></a>
                                on {{date}} in <a href="#/reviews/{{category}}"><span class="darker">{{category}}</span></a>
                                | 1 Comments
                            </p>
                        </div>
                        <div class="review-content">
                            <div class="row">  
                                <div class="thumbnail">
                                    <a href="#/">
                                    {{#if img}}
                                        <img src="{{img}}" class="img-responsive"> 
                                    {{else}}
                                        <img src="https://i.pinimg.com/736x/06/6f/2c/066f2caf0b4220c70a2fb676ad0cc673--fun-movies-watch-movies.jpg" class="img-responsive">                                        
                                    {{/if}}
                                    </a>
                                </div>
                                <p>{{description}}</p>
                                <a href="#/reviews/{{_id}}" class="btn btn-custom">Read More</a>
                            </div>

                        </div>
                    </div>
                    
                 </div>
              {{/each}}
            </div>
            <div class="col-sm-3 aside-review">
                <aside class="sidebar">
                     <h3>
                        Movie Genres
                    </h3>
                    <ul>
                        <li>
                            <a href="#/reviews/Action">Action</a>
                        </li>
                        <li>
                            <a href="#/reviews/Comedy">Comedy</a>
                        </li>
                        <li>
                            <a href="#/reviews/Crime">Crime</a>
                        </li>
                        <li>
                            <a href="#/reviews/Thriller">Thriller</a>
                        </li>
                        <li>
                            <a href="#/reviews/Drama">Drama</a>
                        </li>
                        <li>
                            <a href="#/reviews/Sci-fi">Sci-Fi</a>
                        </li>
                    </ul>
                
                    <h3>
                        Recently Posted Reviews
                    </h3>
                    <ul>
                        {{#each newReviews}}
                        <li>
                            <a href="#/reviews/{{_id}}">{{title}}</a>
                        </li>
                        {{/each}}
                    </ul>
                 
                      <h3>
                        Recently Registered Critics
                    </h3>
                    <ul>
                        {{#each users}}
                        <li>
                            <a href="#/user/profile/?id={{_id}}">{{firstName}} {{lastName}}</a>
                        </li>
                        {{/each}}
                    </ul>
                    
                </aside>
            </div>
        </div>
    </div>
</main>
